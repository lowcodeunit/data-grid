{
  "name": "@lowcodeunit/data-grid",
  "version": "0.0.3",
  "scripts": {
    "build:common": "ng build common --configuration production",
    "build:demo": "ng build demo --configuration production",
    "build:lcu": "ng build lcu --configuration production --single-bundle && npm run pack",
    "demo": "npm run build:common && ng serve demo",
    "demo:wc": "npm run build:common && npm run build:lcu && ng serve demo",
    "deploy": "npm version patch && npm run deploy:all",
    "deploy:all": "npm run deploy:lcu && npm run deploy:common && npm run deploy:demo",
    "deploy:common": "npm version patch --prefix projects/common && ng build common && npm publish ./dist/common --access public",
    "deploy:demo": "npm version patch --prefix projects/demo/ && npm run build:demo && npm publish ./dist/demo --access public",
    "deploy:lcu": "npm version patch --prefix projects/lcu/ && npm run build:lcu && npm publish ./dist/lcu --access public",
    "ng": "ng",
    "pack": "npm run pack:lcu",
    "pack:join": "concat-glob-cli -f \"dist/wc/lcu/lcu.*.js\" -o dist/wc/data-grid.lcu.js",
    "pack:lcu": "mkdirp dist/wc/lcu && npm run pack:main && npm run pack:pollyfills && npm run pack:join",
    "pack:main": "concat-glob-cli -f \"dist/lcu/main.*.js\" -o dist/wc/lcu/lcu.1.js",
    "pack:pollyfills": "concat-glob-cli -f \"dist/lcu/scripts.*.js\" -o dist/wc/lcu/lcu.0.js",
    "start": "ng serve demo --port=4210",
    "build": "npm run build:common && npm run build:lcu",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "npx-build-plus:copy-assets": "node projects/lcu/copy-wc-polyfill.js",
    "docs": "./node_modules/.bin/compodoc -p projects/common/tsconfig.lib.json -s -w -o -r 4202 --theme postmark"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^13.1.1",
    "@angular/cdk": "^13.1.1",
    "@angular/common": "^13.1.1",
    "@angular/compiler": "^13.1.1",
    "@angular/core": "^13.1.1",
    "@angular/elements": "^13.1.1",
    "@angular/flex-layout": "^13.0.0-beta.36",
    "@angular/forms": "^13.1.1",
    "@angular/material": "^13.1.1",
    "@angular/platform-browser": "^13.1.1",
    "@angular/platform-browser-dynamic": "^13.1.1",
    "@angular/router": "^13.1.1",
    "@aspnet/signalr": "^1.1.4",
    "@lcu/common": "1.84.755-angular-13",
    "@lowcodeunit-devkit/ng-lcu": "^1.28.161",
    "@lowcodeunit/lazy-element": "1.21.82-angular-13",
    "@webcomponents/custom-elements": "^1.5.0",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "copy": "^0.3.2",
    "core-js": "^3.20.0",
    "ngx-build-plus": "^13.0.1",
    "rxjs": "~7.4.0",
    "terser": "^5.10.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.1.2",
    "@angular/cli": "^13.1.2",
    "@angular/compiler-cli": "^13.1.1",
    "@angular/language-service": "^13.1.1",
    "@lcu/cli": "^1.7.97",
    "@types/jasmine": "~3.10.2",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^17.0.2",
    "concat-glob-cli": "^0.1.0",
    "jasmine-core": "~3.10.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "mkdirp": "^1.0.4",
    "ng-packagr": "^13.1.2",
    "protractor": "~7.0.0",
    "ts-node": "~10.4.0",
    "tslib": "^2.3.1",
    "tslint": "~6.1.3",
    "typescript": "^4.5.4"
  }
}
