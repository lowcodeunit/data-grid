{
  "name": "@lowcodeunit/data-grid",
  "version": "0.0.1",
  "scripts": {
    "build:common": "ng build common",
    "build:lcu": "ng build lcu --prod --single-bundle && npm run pack",
    "demo": "npm run build:common && ng serve demo",
    "demo:wc": "npm run build:common && npm run build:lcu && ng serve demo",
    "deploy": "npm version patch && npm run deploy:all",
    "deploy:all": "npm run deploy:lcu && npm run deploy:common && npm run deploy:demo",
    "deploy:common": "npm version patch --prefix projects/common && ng build common && npm publish ./dist/common --access public",
    "deploy:demo": "ng build demo --prod && npm publish ./dist/demo --access public",
    "deploy:lcu": "ng build lcu --prod && npm publish ./dist/lcu --access public",
    "ng": "ng",
    "pack": "npm run pack:lcu",
    "pack:join": "concat-glob-cli -f \"dist/wc/lcu/lcu.*.js\" -o dist/wc/data-grid.lcu.js",
    "pack:lcu": "mkdirp dist/wc/lcu && npm run pack:main && npm run pack:pollyfills && npm run pack:join",
    "pack:main": "concat-glob-cli -f \"dist/lcu/main.*.js\" -o dist/wc/lcu/lcu.1.js",
    "pack:pollyfills": "concat-glob-cli -f \"dist/lcu/scripts.*.js\" -o dist/wc/lcu/lcu.0.js",
    "start": "ng serve demo --port=4210",
    "build": "npm run build:common && npm run build:lcu",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "npx-build-plus:copy-assets": "node projects/lcu/copy-wc-polyfill.js",
    "docs": "./node_modules/.bin/compodoc -p projects/common/tsconfig.lib.json -s -w -o -r 4202 --theme postmark"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~7.1.0",
    "@angular/cdk": "^7.1.1",
    "@angular/common": "~7.1.0",
    "@angular/compiler": "~7.1.0",
    "@angular/core": "~7.1.0",
    "@angular/elements": "^7.2.4",
    "@angular/forms": "~7.1.0",
    "@angular/material": "^7.1.1",
    "@angular/platform-browser": "~7.1.0",
    "@angular/platform-browser-dynamic": "~7.1.0",
    "@angular/router": "~7.1.0",
    "@lcu-ide/common": "0.0.5",
    "@lowcodeunit-devkit/ng-lcu": "0.0.167",
    "@webcomponents/custom-elements": "^1.2.1",
    "@webcomponents/webcomponentsjs": "^2.2.7",
    "copy": "^0.3.2",
    "core-js": "^2.5.4",
    "hammerjs": "^2.0.8",
    "ngx-build-plus": "^7.7.5",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.11.0",
    "@angular-devkit/build-ng-packagr": "~0.11.0",
    "@angular/cli": "~7.1.4",
    "@angular/compiler-cli": "~7.1.0",
    "@angular/language-service": "~7.1.0",
    "@lcu/cli": "0.0.86",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "concat-glob-cli": "^0.1.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "mkdirp": "^0.5.1",
    "ng-packagr": "^4.2.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.6"
  }
}
